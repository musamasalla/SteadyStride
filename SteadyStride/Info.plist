<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- HealthKit Usage Descriptions -->
    <key>NSHealthShareUsageDescription</key>
    <string>SteadyStride uses your health data to track your daily steps, active minutes, and walking steadiness to provide personalized mobility coaching tailored to your needs.</string>
    
    <key>NSHealthUpdateUsageDescription</key>
    <string>SteadyStride saves your workout sessions to Apple Health so you can track your fitness progress alongside your other health data.</string>
    
    <!-- App Transport Security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
    </dict>
    
    <!-- Background Modes for HealthKit -->
    <key>UIBackgroundModes</key>
    <array>
        <string>processing</string>
    </array>
    
    <!-- Status Bar Style -->
    <key>UIStatusBarStyle</key>
    <string>UIStatusBarStyleDefault</string>
    
    <!-- Supported Interface Orientations -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    
    <!-- App Category -->
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.healthcare-fitness</string>
    
    <!-- Requires Full Screen (for multitasking on iPad) -->
    <key>UIRequiresFullScreen</key>
    <false/>
    
    <!-- Launch Screen Configuration -->
    <key>UILaunchScreen</key>
    <dict>
        <key>UIColorName</key>
        <string>AccentColor</string>
    </dict>
    
    <!-- URL Scheme for Deep Linking -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>steadystride</string>
            </array>
            <key>CFBundleURLName</key>
            <string>com.steadystride.app</string>
        </dict>
    </array>
</dict>
</plist>
